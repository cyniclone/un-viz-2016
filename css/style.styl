/*****    TEXT STYLING    *********/
$color1 = #333;
$font1 = 'Droid Sans';

/**********************************/

body
  background  #e6e6e6
  font-family $font1
  font-size   14px
  color       $color1

.container
  padding 20px

select
  margin-right 20px


/* Individual Chart Styles *****/
.container.child-mortality
  background: #48a034

.container.poverty
  background: #e72a3c

/***** 1.) ZERO HUNGER ************/
.container.zero-hunger
  background: #dda63a
/**********************************/


h1 {text-align: center;}

h1, h2 {
  //font-family: 'Oswald', sans-serif;
  text-transform: uppercase;
}

h4 {
  text-align: left;
}

select {
  font-size: 14px;
  color: black;
}

/*********** Visualization  *********/

.content {
  background: white;
  padding-top:2%;
}

.axis { font-family: "Helvetica Neue", Helvetica, sans-serif; }

.axis path,
.axis line {
  fill: none;
  stroke: #FFF;
  shape-rendering: crispEdges;
}

.d3-tip{
  width: 150px;
  background-color: rgba(255, 255, 255, 0.85);

  padding: 5px;
  border-radius: 10px;
  font-size: 12px;
  font-family: sans-serif;
  /*color: #478D2E;*/
  color: #222;
}

.viz {
  margin:2%;
  /*background-color: #478D2E;*/
}


/* Style data points */
circle.active {
  r: 6px;
}

.scatterdot
  stroke: #E0E0E0;
  stroke-width: 1px;
  stroke-opacity: 1;
  opacity: 0.8;
  fill: #fff;
  fill-opacity: 0.8;

.scatterdot.active
  stroke #C66611
  stroke-width: 2px;
  stroke-opacity: 1;
  opacity: 1;
  fill: #000;
  fill-opacity: 1;

#select-title{
  float: right;
  display: inline-block;
}

#chart {
  float: left;
}
