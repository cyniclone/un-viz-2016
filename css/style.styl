/****** DOM ELEMENTS **********************/

h1 text-align center
#page-header
  font-family "Oswald"
  font-weight 400
  font-size 50px
  text-transform uppercase
  letter-spacing 1px
  color black

h3 font-size 24px

h4
  margin-top 0px
.axis-description
  margin-top 0px

img.arrow
  width 32px
  height 32px
  margin-top 5px
  padding-right 5px
  float right
.arrow-container
  float left

#how-to-read > ol > li    font-size 18px margin-bottom 12px
#info-box
  font-size 14px

select
  font-size 14px
  color black
  float left
  max-width 100%
  margin-bottom 10px
  text-overflow ellipsis

#select-title
  float left
  margin-top 0
  display inline-block

/*****    TEXT STYLING    *********/
$color1 = #333
$font1 = 'Droid Sans'

body
  background  #e6e6e6
  font-family $font1
  font-size   16px
  color       $color1

/********* VISUALIZATION *************/
.container
  padding 20px

.poverty /* 1 POVERTY */
  color black
  background: #e72a3c
  circle.scatterdot,
  circle.scatterdot2
    opacity 0.8
  circle.scatterdot.active,
  circle.scatterdot2.active
    stroke-width 2px
    stroke #222
    r 6px
    fill #222
    opacity 1
  #chart
  g.tick
    font-size 13px
    fill white
  .x.axis
    g.tick
      color #ccc
      stroke-opacity 0.8

.zero-hunger /* 2 ZERO HUNGER */
  background #dda63a
  g.tick
    fill black

.child-mortality /* 3 CHILD MORTALITY */
  background: #48a034
  color black
  circle.scatterdot,
  circle.scatterdot2
    opacity 0.25
  circle.scatterdot.active,
  circle.scatterdot2.active
    stroke-width 2px
    r 6px
    fill #222
    opacity 1

.education /* 4 EDUCATION */
  color #000
  background: #c51c2d
  h4
    color white
  g.tick
    font-size 12px
    fill white
  circle.active
    stroke black
    fill black
  //#info-box
  //  margin-top 10px

/* 5 GENDER EQUALITY */
.gender
  background #E44825
  h4.axis-description
    color white
  g.tick
    font-size 12px
    fill white
  circle.scatterdot.active,
  circle.scatterdot2.active
    stroke-width 1px
    stroke steelblue
    r 6px
    fill #222

.water /* 6 WATER ACCESS */
  background #2bbbdd
  g.tick
    font-size 12px
    fill #222
  line.verticalGrid, line.verticalGrid2, line.horizontalGrid, line.horizontalGrid2
    stroke #ccc

  circle.scatterdot.active,
  circle.scatterdot2.active
    stroke-width 2px
    stroke #222


.energy /* 7 ENERGY ACCESS */
  background #fbbf0f
  color #000
  h2
    color #f28f00
    font-weight bold
  #page-header
    color #222
  #chart-1990, #chart-2000, #chart-2010, #chart-2012
    margin-bottom 50px
  .axis path,
  .axis line
    fill: none;
    stroke: #000;
  .axis text
    font 12px sans-serif
  g.tick
    fill #222
  .bar
    shape-rendering geometricPrecision
  .jq-div
    h4
      font-weight bold
      margin: 0 0 0 0
    p
      color #222


.labor /* 8 DECENT ECONOMIC WORK AND GROWTH */
  background #a21b43
  color #000
  h4
    color white
  g.tick
    font-size 12px
    fill white
  circle.active
    fill black
    stroke #fbb900
    stroke-width 1px

.innovation /* 9 INNOVATION */
  background #ee6b2f
  color #fff
  h4
    color #164767
  g.tick
    font-size 12px
    fill white
  .y.axis path, .y.axis line
    stroke none
  circle.scatterdot.active, circle.scatterdot2.active
    fill #164767
    stroke #164767

.inequality /* 10 REDUCED INEQUALITIES */
  color #000000
  background #dd1e66
  .height-30 { height: 30px }
  .height-60 { height: 60px }
  .height-90 { height: 90px }
  .zero-line
    stroke #FEFEFE
  #inequality-axis
    height 30px
    .axis
      path
        stroke none
    g.tick
      font-size 14px
      fill black

  circle
    stroke black
  circle.white
    fill #FEFEFE
  circle.purple
    fill #8b1c34

  .d3-tip
    width 200px

.sustainable /* 11 SUSTAINABLE CITIES AND COMMUNITIES */
    background #f59a23
  h3
    color black
  g.tick
    font-size 12px
    fill white

  .active
    fill black

  .q0-7   /* Choropleth styling */
    fill #FEEAD8
  .q1-7
    fill #FCC99C
  .q2-7
    fill #F8A96A
  .q3-7
    fill #F38C41
  .q4-7
    fill #ED691E
  .q5-7
    fill #CD4D1B
  .q6-7
    fill #A0391B
  .no-data
    fill #ccc
    fill-opacity 0.6

  path:hover, path.highlighted
    fill #4684DF

  #map-legend
    g.tick line
      stroke black
    .axis  path
      stroke black
      stroke-width 1px

.consumption /* 12 RESPONSIBLE CONSUMPTION */
  color #000000
  background #b98831
  #page-header
    color white
  circle.scatterdot
    stroke white
    stroke-width 2px
  circle.active
    fill white
    stroke steelblue
  g.tick
    font-size 12px
    fill black

.climate /* 13 CLIMATE ACTION */
  background #3a7c46
  color white
  circle.scatterdot
    fill white
    stroke white
    stroke-width 1px
    fill-opacity 0.25
  circle.active
    fill-opacity 1
    fill #164767
    stroke #38B3FF
    stroke-width 2px

.fish /* 14 LIFE BELOW WATER */
  background #2193d0
  .active
    fill black

.land /* 15 LIFE ON LAND */
  background #59B439

  #line-chart
    .axis path
        stroke none
    .y.axis g.tick
      stroke-width 2px
      stroke-opacity 0.6
    g.tick
      font-size 14px
      fill #333

  #map
    path
      stroke: #7f7f7f;
    path:hover, path.highlighted
      fill #4684DF

  #map-legend
    g.tick line
      stroke #555
    .axis  path
      stroke #555
      stroke-width 1.5px

  .q0-7   /* Choropleth styling */
    fill #EAF2E3
  .q1-7
    fill #C5E0BE
  .q2-7
    fill #9ECE9A
  .q3-7
    fill #74BE77
  .q4-7
    fill #41B062
  .q5-7
    fill #149148
  .q6-7
    fill #006A35
  .no-data
    fill #ccc
    fill-opacity 1

.birth-registration /* 16 PEACE AND JUSTICE STRONG INSTITUTIONS */
  background #066799
  color white
  h3
    color #FAB600

  circle
    fill-opacity 0.3
    stroke-opacity 1
    stroke-width 1.5px
  circle.active
    stroke #FAB600
  g.tick
    font-size 14px


.partnerships /* 17 PARTNERSHIPS */
  background #164767
  #page-header,
  .axis-description,
  .accent-color
    color #FFD200

  #how-to-read
    color white

  #how-to-read
   li
     color #FFD200
    span
      color white

  #chart
    g.tick
      font-size 13px
      fill white
    circle.active
      stroke #FFD200

/*********** global viz  *********/
.axis
  font-family "Helvetica Neue", Helvetica, sans-serif

.axis path,
.axis line
  fill none
  stroke #FFF
  shape-rendering geometricPrecision

.d3-tip, .world-tooltip
  background-color: rgba(255, 255, 255, 0.85);

  padding: 5px;
  border-radius: 10px;
  font-size: 12px;
  font-family: sans-serif;
  color: #222;

.d3-tip
  width 150px
.world-tooltip
  width 180px

div.world-tooltip
  position: absolute;
  background-color: white;
  border: 1px solid black;
  color: black;
  font-weight: bold;
  padding: 4px 8px;
  display: none;

/* MAP */
#map-legend
  g.tick
    fill black
  .axis
    path
      stroke-width 1.5px
#map
  font: 12px sans-serif
  path
    stroke-width: 1px;
    stroke: whitesmoke;
    /*fill: #222; */
    cursor: pointer;


/* Style data points */

.scatterdot, .scatterdot2
  stroke: #E0E0E0;
  stroke-width: 1px;
  stroke-opacity: 1;
  opacity: 0.6;
  fill: #fff;
  fill-opacity: 0.6;

.scatterdot.active, .scatterdot2.active
  stroke #C66611
  stroke-width: 2px;
  stroke-opacity: 1;
  opacity: 1;
  fill: #000;
  fill-opacity: 1;